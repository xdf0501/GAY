<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/caldroid_sky_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="夜寐"
                android:textColor="@color/white"
                android:textSize="50dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zhanghao"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="用户名："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/zhanghao1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/input"
            android:hint="请输入用户名"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mima"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="密码："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/mima1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/input"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/caldroid_holo_blue_light"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fogetmima"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center"
            android:text="忘记密码？"
            android:textColor="#3232CD"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/zhuce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="注册"
            android:textColor="#3232CD"
            android:textSize="15dp" />

    </LinearLayout>
</LinearLayout>